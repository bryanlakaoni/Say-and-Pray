<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/judulDoa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Judul Prayer"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/app_font"
                android:textColor="@color/primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/favLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                app:drawableStartCompat="@drawable/fav_filled"
                android:drawablePadding="4dp"
                app:drawableTint="@color/secondary"
                tools:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/isiDoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Isi doa singkat preview di sini..."
            android:textSize="14sp"
            android:fontFamily="@font/app_font"
            android:textColor="#757575"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/remindLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="â° Reminder Aktif"
            android:textSize="12sp"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>